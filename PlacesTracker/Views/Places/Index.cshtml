<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Places Tracker</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
  </head>
  <body class="container">
    @using PlacesTracker.Models;
    <div class="card mt-4">
      <h1 class="card-header text-center">Places You've Been</h1>
      <div class="card-body">
        @if (Model.Count == 0)
        {
          <p class="card-text">You have never gone anywhere.</p>
          }
        <ul class="list-group">
          @foreach (Place place in Model)
          { 
            <a href="/places/@place.Id" class="list-group-item list-group-item-action" style="background-color: @place.Color">
              <div class="card text-bg-light">
                <div class="card-body">
                  <p class="card-text">@place.CityName - stay duration: @place.StayDuration</p>
                </div>
              </div>
            </a>
          }
        </ul>
        <div class="row mt-3 justify-content-evenly">
          <div class="col-auto">
            <a href='places/new' class="btn btn-success">Add a place</a>
          </div>
          <div class="col-auto">
            <a href='/' class="btn btn-primary">Return home</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>